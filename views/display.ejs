<!DOCTYPE html>
<html lang="en">
<head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <meta charset="utf-8">
        <title>Todo App</title>
</head>

<body>
        <br>
        <form class="form-inline my-2 my-lg-0" action="/search" method="get" style="margin-left: 55%;">
                <input type="text" name="search" placeholder="Search">
                <button type="submit" class="btn btn-dark">Search</button><br>
        </form>
        <div>
                <a href="/add" class="btn btn-success" style="margin-top:-5%;">Add Task</a> 
                <button type="button" class="btn btn-info" style="margin-top:-5%;" onclick="window.location='display'">Display all Task</button>
                <button type="button" class="btn btn-info" style="margin-top:-5%;" onclick="window.location='/'">Home Page</button>
                <table class="table">
                        <thead style="color: pink;">
                                <tr>
                                        <th scope="col" style="color: rgb(247, 113, 10);">title</th>
                                        <th scope="col" style="color: rgb(247, 113, 10);">task</th>
                                        <th scope="col" style="color: rgb(247, 113, 10);">action</th>
                                </tr>
                        </thead>
                        <tbody>
                                <% for(let user of todo) { %>
                                        <tr>
                                                <th scope="col" style="color: rgb(69, 176, 139);">
                                                        <%= user.title%>
                                                </th>
                                                <th scope="col">
                                                        <%= user.task%>
                                                </th>
                                                <th scope="col">
                                                        <a href="<%= `edit/${user._id}` %>" class="btn btn-success">Edit</a> 
                                                        <a href="<%= `delete/${user._id}` %>" class="btn btn-danger">Delete</a>
                                                </th>
                                                        <%}%>
                                        </tr>
                        </tbody>
                </table>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>